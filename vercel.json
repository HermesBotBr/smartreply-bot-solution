
{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "/uploads/:path*"
    },
    {
      "source": "/((?!api/|uploads/).*)",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/messages/refresh-messages",
      "dest": "/api/messages/refresh-messages"
    },
    {
      "src": "/api/messages/force-refresh",
      "dest": "/api/messages/force-refresh"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ]
}
